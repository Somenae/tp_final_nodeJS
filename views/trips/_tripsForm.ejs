<div>
  <label for="departureDateTime">Date de départ</label>
  <input
    type="date"
    id="departureDateTime"
    name="departureDateTime"
    value="<%= typeof trip != 'undefined' ? trip.departureDateTime : '' %>"
  />
</div>

<div>
  <label for="arrivalDateTime">Date d'arrivée</label>
  <input
    type="date"
    id="arrivalDateTime"
    name="arrivalDateTime"
    value="<%= typeof trip != 'undefined' ? trip.arrivalDateTime : '' %>"
  />
</div>

<div>
  <label for="departure">Départ</label>
  <input
    type="text"
    id="departure"
    name="departure"
    value="<%= typeof trip != 'undefined' ? trip.departure : '' %>"
  />
</div>

<div>
  <label for="destination">Destination</label>
  <input
    type="text"
    id="destination" 
    name="destination"
    value = "<%= typeof trip != 'undefined' ? trip.destination : '' %>"
  />
</div>

<div>
  <label for="price">Prix</label>
  <input
    type="text"
    id="price" 
    name="price"
    value = "<%= typeof trip != 'undefined' ? trip.price : '' %>"
  />
</div>

<div>
  <label for="status">Statut</label>
  <select
    id="status" 
    name="status"
    value = "<%= typeof trip != 'undefined' ? trip.status : '' %>"
  >
    <option value="available">Ouvert</option>
    <option value="booked">Complet</option>
    <option value="canceled">Annulé</option>
  </select>
</div>

<div>
  <label for="places">Places</label>
  <input
    type="number"
    id="places" 
    name="places"
    value = "<%= typeof trip != 'undefined' ? trip.places : '' %>"
  />
</div>

<div>
  <input type="submit" />
</div>